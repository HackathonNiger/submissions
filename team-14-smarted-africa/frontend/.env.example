# ----------------------------
# Server & Environment
# ----------------------------
NODE_ENV=development
PORT=5000

# ----------------------------
# Database (MongoDB Atlas or Local)
# ----------------------------
# Example Atlas:
# DB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/<dbname>?retryWrites=true&w=majority
DB_URI=

# ----------------------------
# Redis (for caching / sessions / queues)
# ----------------------------
# Example local:
# REDIS_URL=redis://127.0.0.1:6379
# Example cloud (RedisLabs, Upstash, etc.):
# REDIS_URL=rediss://:<password>@<hostname>:<port>
REDIS_URL=

# ----------------------------
# JWT / Auth
# ----------------------------
JWT_SECRET=
JWT_EXPIRES_IN=15m
REFRESH_SECRET=
REFRESH_EXPIRES_IN=7d

# ----------------------------
# CORS / Rate Limit
# ----------------------------
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# ----------------------------
# Email (SMTP)
# ----------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM="SmartEd Africa <no-reply@smarted.africa>"

# ----------------------------
# Frontend
# ----------------------------
FRONTEND_URL=http://localhost:3000

# ----------------------------
# Paystack
# ----------------------------
PAYSTACK_SECRET_KEY=
PAYSTACK_PUBLIC_KEY=
PAYSTACK_BASE_URL=https://api.paystack.co

# ----------------------------
# Stripe
# ----------------------------
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
